<Window x:Class="CollectionTracker.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Username -->
            <TextBox Name="UsernameTextBox" Margin="10" Width="200"  />

            <!-- Password -->
            <PasswordBox Name="PasswordBox" Margin="10" Width="200" />

            <!-- Login Button -->
            <Button Content="Login" Name="LoginButton" Click="LoginButton_Click" Margin="10" Width="100" />
            <Button Content="Register" Click="RegisterButton_Click" Margin="10" Width="100" />
        </StackPanel>
    </Grid>
</Window>
