<Window x:Class="CollectionTracker.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" 
        Height="600" 
        Width="800"
        WindowState="Maximized" 
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Height="600">
            <!-- Username -->
            <TextBlock Text="username Name (admin)" Margin="10" />
            <TextBox Name="UsernameTextBox" Margin="10"   />

            <!-- Password -->
            <TextBlock Text="password (admin!) " Margin="10" />
            <PasswordBox Name="PasswordBox" Margin="10" />

            <!-- Login Button -->
            <Button Content="Login" Name="LoginButton" Click="LoginButton_Click" Margin="10" />
            <Button Content="Register" Click="RegisterButton_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
