        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Collection Tracker" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="CollectionNameTextBox"/>
            <Button Content="Add Collection" Click="AddCollectionButton_Click" />
            <ListView Name="CollectionsListView"/>
        </StackPanel>
    </Grid>
</Window>